.sidebar-toggle {
  display: inline-block;
  margin-left: 10px;
  width: 16px;
  height: 18px;
  padding: 5px;
  background: transparent;
  line-height: 0;
  z-index: $zindex-5;
  cursor: pointer;
  -webkit-transform: translateZ(0);

  +tablet() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}



.sidebar-toggle-line {
  position: relative;
  display: inline-block;
  vertical-align: top;
  height: 2px;
  width: 100%;
  background: #555;
  margin-top: 3px;

  &:first-child { margin-top: 0; }
}
