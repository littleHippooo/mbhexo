// Header
// --------------------------------------------------
.header-inner {
  padding: 25px 0 10px;
  clearfix();

  +mobile() {
    width: auto;
    padding: 10px;
    margin-bottom: -20px;
  }
}

.site-meta {
  float: left;
  margin-left: -20px;
  line-height: normal;

  +mobile() {
    margin-left: 10px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: 500;

    +mobile() { line-height: 34px; }
  }
}


.logo-line-before,
.logo-line-after {
  display: none;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
.site-meta .site-title {
   +mobile(){
   		margin-left: 8px;
   		padding-bottom: 15px;
   }
}