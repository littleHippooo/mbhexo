// https://github.com/chriskempson/tomorrow-theme

@require "theme"
@require "diff"

// Placeholder: $code-block
$code-block {
  overflow: auto;
  margin: 15px 0;
  padding: 0;
  font-size $code-font-size;
  color: $highlight-foreground;
  background: $highlight-background;
  line-height: $line-height-code-block;
  border-bottom: 2px solid #ededed;
}

pre, code { font-family: $code-font-family;}

code {
  padding: 2px 4px;
  word-wrap: break-word;
  color: #414a51;
  background: #fbfbfb;
  border-radius: $code-border-radius;
  font-size $code-font-size;
  font-style: italic;
  letter-spacing: .5px;
}
@media screen and (min-width:1400px) {
	pre, .highlight {
		line-height:1.2em;
		letter-spacing: .5px;
	}
	code {
		font-size: 16px;
	}
}
pre {
  @extend $code-block;

  code {
    padding: 0;
    color: $highlight-foreground;
    background: none;
    text-shadow: none;
  }
}

.highlight {
  @extend $code-block;
  border-radius: 2px
  position: relative;
  pre {
    border: none;
    margin: 0;
    padding: 10px 0;
  }

  table {
    margin: 0;
    width: auto;
    border: none;
  }

  td {
    border: none;
    padding: 0;
  }

  figcaption {
    clearfix();
    font-size: 1em;
    color: $highlight-foreground;
    line-height: 1em;
    margin-bottom: 1em;

    a {
      float: right;
      color: $highlight-foreground;

      &:hover { border-bottom-color: $highlight-foreground; }
    }
  }

  .gutter pre {
    padding-left: 10px
    padding-right: 10px
    color: $highlight-gutter.color
    text-align: right
    background-color: #f5f5f5;
  }

  .code pre {
    width: 100%
    padding-left: 10px
    padding-right: 10px
    background-color: $highlight-background
  }

  .line { height: 20px; margin: .5px 0;}
}

.gutter {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.gist table {
  width: auto;

  td { border: none; }
}

// For diff highlight
pre .deletion { background: $highlight-deletion; }
pre .addition { background: $highlight-addition; }
pre .meta     { color: rgba(0,146,219,.8) }

pre {

  .comment { color: $highlight-comment; }

  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo {
    color: rgba(100,149,237,.9);
  }

  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .command {
    color: rgba(245,135,31,.9);
  }

  .ruby .class .title
  .css .rules .attribute
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
  .special
  .number
  .formula {
    color: $highlight-green;
  }
  .string {
	color: rgba(51,153,0,.8);
  }
  .title
  .css .hexcolor {
    color: $highlight-aqua;
  }

  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title {
    color: $highlight-blue;
  }

  .keyword
  .javascript .function {
    color: #ae81ff;
  }

}
